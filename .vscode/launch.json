{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "fibre-shell",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/python",
            "args": ["${workspaceFolder}/tools/fibre-shell"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [{"name": "FIBRE_LOG", "value": "5"}],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "symbolLoadInfo": {
                "loadAll": true,
                "exceptionList": ""
            }
        },
        {
            "name": "Python Test Client",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/python",
            "args": ["${workspaceFolder}/test/test_client.py"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [{"name": "FIBRE_LOG", "value": "5"}],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "symbolLoadInfo": {
                "loadAll": true,
                "exceptionList": ""
            }
        },
        {
            "name": "C++ Test Server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/test/build/test_node.elf",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/test",
            "environment": [{"name": "FIBRE_LOG", "value": "5"}],
            "externalConsole": false,
            "MIMode": "gdb",
            "args": ["--server", "--domain", "tcp-server:address=localhost,port=14220"],
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "symbolLoadInfo": {
                "loadAll": true,
                "exceptionList": ""
            }
        },
        {
            "name": "Simulation",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/sim/build/fibre_sim",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/sim",
            "environment": [{"name": "FIBRE_LOG", "value": "5"}],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "symbolLoadInfo": {
                "loadAll": true,
                "exceptionList": ""
            }
        }
    ]
}